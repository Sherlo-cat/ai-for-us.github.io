---
// English About Page
import BaseLayout from '@/layouts/BaseLayout.astro';
import { useTranslations } from '@/i18n';

const lang = 'en';
const t = useTranslations(lang);
---

<BaseLayout title={`${t('about.title')} | AI for Us`} lang={lang}>
  <div class="pt-24 pb-16 bg-gradient-dark min-h-screen">
    <div class="container-custom max-w-4xl">
      <!-- Header -->
      <header class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          <span class="text-gradient">{t('about.title')}</span>
        </h1>
      </header>
      
      <!-- Profile Section -->
      <div class="card mb-12">
        <div class="flex flex-col md:flex-row items-center md:items-start gap-8">
          <!-- Avatar -->
          <div class="w-32 h-32 rounded-full bg-gradient-to-br from-neon-cyan to-electric-purple p-1 flex-shrink-0">
            <div class="w-full h-full rounded-full bg-deep-space flex items-center justify-center">
              <svg class="w-16 h-16 text-neon-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
          </div>
          
          <!-- Bio -->
          <div class="text-center md:text-left">
            <h2 class="text-2xl font-bold text-slate-200 mb-2">AI Engineer</h2>
            <p class="text-neon-cyan mb-4">Artificial Intelligence Enthusiast</p>
            <p class="text-slate-400 leading-relaxed">
              Welcome to my corner of the internet! I'm passionate about exploring the frontiers of artificial intelligence 
              and sharing knowledge with the community. With experience in machine learning, deep learning, and AI systems,
              I aim to bridge the gap between cutting-edge research and practical applications.
            </p>
          </div>
        </div>
      </div>
      
      <!-- Skills Section -->
      <section class="mb-12">
        <h2 class="text-2xl font-bold text-slate-200 mb-6">Expertise</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="card">
            <h3 class="text-lg font-semibold text-neon-cyan mb-3">Machine Learning</h3>
            <p class="text-slate-400 text-sm">Deep neural networks, transformers, reinforcement learning, and model optimization.</p>
          </div>
          <div class="card">
            <h3 class="text-lg font-semibold text-electric-purple mb-3">Natural Language Processing</h3>
            <p class="text-slate-400 text-sm">Large language models, text generation, sentiment analysis, and conversational AI.</p>
          </div>
          <div class="card">
            <h3 class="text-lg font-semibold text-neon-cyan mb-3">Computer Vision</h3>
            <p class="text-slate-400 text-sm">Image classification, object detection, generative models, and visual understanding.</p>
          </div>
          <div class="card">
            <h3 class="text-lg font-semibold text-electric-purple mb-3">MLOps & Deployment</h3>
            <p class="text-slate-400 text-sm">Model serving, containerization, CI/CD pipelines, and production systems.</p>
          </div>
        </div>
      </section>
      
      <!-- Mission Section -->
      <section class="mb-12">
        <h2 class="text-2xl font-bold text-slate-200 mb-6">Mission</h2>
        <div class="card bg-gradient-to-br from-neon-cyan/5 to-electric-purple/5">
          <blockquote class="text-lg text-slate-300 italic">
            "To demystify artificial intelligence and make it accessible to everyone, 
            while pushing the boundaries of what's possible with technology."
          </blockquote>
        </div>
      </section>
      
      <!-- Contact Section -->
      <section>
        <h2 class="text-2xl font-bold text-slate-200 mb-6">Connect</h2>
        <div class="flex flex-wrap gap-4">
          <a 
            href="https://github.com/ai-for-us" 
            target="_blank"
            rel="noopener noreferrer"
            class="btn-secondary"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
            </svg>
            GitHub
          </a>
          <a 
            href="https://linkedin.com/in/" 
            target="_blank"
            rel="noopener noreferrer"
            class="btn-secondary"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            LinkedIn
          </a>
          <a 
            href="https://x.com/" 
            target="_blank"
            rel="noopener noreferrer"
            class="btn-secondary"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
            X (Twitter)
          </a>
        </div>
      </section>
    </div>
  </div>
</BaseLayout>
